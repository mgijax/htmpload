#format: sh
###########################################################################
#
# Configuration.default
#
###########################################################################

###########################################################################
#
#  If the MGICONFIG environment variable does not have a local override,
#  use the default "live" settings.
#
###########################################################################
if [ "${MGICONFIG}" = "" ]
then
    MGICONFIG=/usr/local/mgi/live/mgiconfig
    export MGICONFIG
fi

. ${MGICONFIG}/master.config.sh

###########################################################################
#
# Directory paths
#
###########################################################################

FILEDIR=${DATALOADSOUTPUT}/mgi/htmpload/europhenompload.test
ARCHIVEDIR=${FILEDIR}/archive
INPUTDIR=${FILEDIR}/input
OUTPUTDIR=${FILEDIR}/output
LOGDIR=${FILEDIR}/logs
RPTDIR=${FILEDIR}/reports
QCOUTPUTDIR=${RPTDIR}

export FILEDIR ARCHIVEDIR INPUTDIR OUTPUTDIR LOGDIR RPTDIR QCOUTPUTDIR 

###########################################################################
#
# Input/Output files
#
###########################################################################

# input file from the BioMart
#
BIOMART_INPUT_FILE=${HTMPLOAD}/test/mgi_eurompload_test.txt
BIOMART_COPY_INPUT_FILE=${INPUTDIR}/mgi_eurompload_test.txt
HTMP_INPUT_FILE=${INPUTDIR}/mgi_htmp_europheno.txt
INPUTFILE=${BIOMART_INPUT_FILE}

# input file that contains data that was skipped
#
HTMPSKIP_INPUT_FILE=${INPUTDIR}/mgi_europhenoload_skipped.txt

# input file that contains data that had data errors
#
HTMPERROR_INPUT_FILE=${INPUTDIR}/mgi_europhenoload_error.txt

# input file that contains data that was merged (duplicates)
#
HTMPDUP_INPUT_FILE=${INPUTDIR}/mgi_europhenoload_dup.txt

# input file that contains a unique genotype # (1 thru ...)
#
HTMPUNIQ_INPUT_FILE=${INPUTDIR}/mgi_europhenoload.txt

# Genotype & Annotation input file
#
GENOTYPE_INPUT_FILE=${HTMPLOAD}/test/mgi_genotypeload_test.txt
ANNOT_INPUT_FILE=${HTMPLOAD}/test/mgi_annotload_test.txt

export BIOMART_INPUT_FILE BIOMART_COPY_INPUT_FILE HTMP_INPUT_FILE INPUTFILE
export HTMPSKIP_INPUT_FILE HTMPDUP_INPUT_FILE HTMPERROR_INPUT_FILE HTMPUNIQ_INPUT_FILE
export GENOTYPE_INPUT_FILE ANNOT_INPUT_FILE

# Log files
#
LOG_PROC=${LOGDIR}/europhenoload.proc.log
LOG_DIAG=${LOGDIR}/europhenoload.diag.log
LOG_CUR=${LOGDIR}/europhenoload.cur.log
LOG_VAL=${LOGDIR}/europhenoload.val.log
LOG_TEST=${LOGDIR}/europhenoload.test.log

export LOG_PROC LOG_DIAG LOG_CUR LOG_VAL LOG_TEST

CREATEDBY=scrum-dog
JNUMBER=J:165965
export CREATEDBY JNUMBER

# Genotype load
#
# is this call a stand-alone or is it being called from another product?
GENOTYPELOAD_STANDALONE=0
# run in 'load' mode (default)
GENOTYPELOAD_MODE=load
# new genotype file (output from genotypeload)
GENOTYPELOAD_OUTPUT=${INPUTDIR}/mgi_genotypeload_new.txt

export GENOTYPELOAD_STANDALONE GENOTYPELOAD_CACHE_ADMIN GENOTYPELOAD_MODE GENOTYPELOAD_OUTPUT

###########################################################################
#
#  MISCELLANEOUS SETTINGS
#
###########################################################################

#  The name of the job stream for the load
JOBSTREAM=htmpload
export JOBSTREAM

#  The name of the load for the subject of an email notification
MAIL_LOADNAME="Europheno-MP Load (TEST)"

#  Recipient list for mailing the log files (comma-separated)
#MAIL_LOG_CUR="mgiadmin@jax.org,mgi-hiphenoload@jax.org"
MAIL_LOG_CUR="lec"

export MAIL_LOADNAME MAIL_LOG_PROC MAIL_LOG_CUR

INSTALLDIR=${HTMPLOAD}
export INSTALLDIR

